@model IEnumerable<ControleDeAniversarios.Models.AniversarianteModel>

@{
    ViewData["Title"] = "Lista de aniversáriantes";
}
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Aniversariante" asp-action="Create">Criar</a>
    </div>
    <br />
<h1 class="display-4">Listagem de contatos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a role="button" class="btn btn-primary" asp-controller="Aniversariante" asp-action="Edit">Editar</a>
                            <a role="button" class="btn btn-danger" asp-controller="Aniversariante" asp-action="Delete">Apagar</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>

</div>
