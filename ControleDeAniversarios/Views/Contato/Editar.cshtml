@{
    ViewData["Title"] = "Lista de aniversáriantes";
}
<div class="text-center">

    <h1 class="display-4">Editar Aniversariante</h1>
</div>

<form>
    <div class="form-group">
        <label for="InputName">Nome</label>
        <input type="text" class="form-control"placeholder="Coloque seu nome">
    </div>
    <div class="form-group">
        <label for="exampleInputLastName">Sobrenome</label>
        <input type="text" class="form-control"  placeholder="Coloque seu sobrenome">
    </div>
    <div class="form-group">
        <label for="InputDate">Data</label>
        <input type="date" class="form-control" placeholder="Coloque sua data de aniversario">
    </div>
    <br/>
        <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary"asp-controller="Contato" asp-action="Index">Voltar</a>
</form>